<div class="messages-container w-50 mx-auto my-3">
  <!-- Flash messages -->
  <% flash.each do |state, alertContent| %>
    <div class="alert alert-<%= state == 'notice' ? 'success' : 'danger' %> alert-dismissible fade show" role="alert">
      <%= alertContent %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  <% end %>
</div>