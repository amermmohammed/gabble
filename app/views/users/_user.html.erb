<div class="col-3">
  <div class="card bg-light text-dark">
    <%= link_to user_path(user.username) do %>
      <%= gravatar_tag user.email, size: 500, html: {class: "card-img-top img-fluid", title: user.username } %>
    <% end %>
    <div class="card-body">
      <h4 class="card-title text-center mt-0">
        <%= user.username %>
        <%= render "follow_buttons", user: user %>
      </h4>
    </div>
  </div>
</div>