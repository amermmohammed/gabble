<div class="tweet-card tweet-1 my-2 gap-2">
  <p class="text-center my-2">comments count: <span id="comments-<%= tweet.id %>-count"><%= tweet.comments.size %></span></p>
  <%= form_tag comments_path(commentable_type: 'tweet', commentable_id: tweet.id), method: :post, remote: true do %>
    <div class="form-group">
      <%= text_area_tag :comment_text, nil, placeholder: 'write a comment', class: 'form-control my-2' %>
    </div>
    <%= submit_tag 'comment', class: 'btn btn-sm btn-primary' %>
  <% end %>
</div>