<% if activity.trackable %>
  <!-- display following activity -->
  <li class="list-group-item d-flex align-items-center gap-3 rounded my-2">
    <%= link_to  activity.owner.username do %>
      <%= gravatar_tag activity.owner.email, size: 25, html: {class: "img-fluid border rounded", title: activity.owner.username } %>
    <% end %>
    <h6 class="m-0">followed</h6>
    <%= link_to  activity.recipient.username do %>
      <%= gravatar_tag activity.recipient.email, size: 25, html: {class: "img-fluid border rounded", title: activity.recipient.username} %>
    <% end %>
    <!-- display activity created time -->
    <span class="text-muted"><%= time_ago_in_words(activity.created_at) %> ago</span>
  </li>
<% end %>



